<h1>New Gladiator</h1>
<%= form_tag gladcrud_index_path, :method => :post do %>
  <label>Name</label><br/>
  <%= text_field :gladiator, :name %><br/>
  <label>Strength</label><br/>
  <%= text_field :gladiator, :strength %><br/>
  <label>Int</label><br/>
  <%= text_field :gladiator, :intelligence %><br/>
  <label>Agility</label><br/>
  <%= text_field :gladiator, :agility %><br/>
  <label>Damage</label><br/>
  <%= text_field :gladiator, :damage %><br/>

  <div><%= submit_tag 'Save' %><%= link_to 'Cancel', '#' %></div>
<% end %>
